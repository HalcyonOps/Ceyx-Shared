{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "gitAuthor": "bot@mend.io",
    "platformCommit": "auto",
    "enabledManagers": [
        "regex"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^resources/shared/.*$"
            ],
            "matchStrings": [
                ".*"
            ],
            "datasourceTemplate": "git",
            "depNameTemplate": "shared-files",
            "lookupNameTemplate": "HalcyonOps/Ceyx-Shared"
        }
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "git"
            ],
            "matchDepNames": [
                "shared-files"
            ],
            "targetBranch": "main",
            "schedule": [
                "0 3 * * *"
            ],
            "automerge": true,
            "automergeType": "branch",
            "repositories": [
                "HalcyonOps/Ceyx-AWS-EC2",
                "HalcyonOps/Ceyx-AWS-VPC"
            ],
            "copyFiles": {
                "resources/shared/CODE_OF_CONDUCT.md": "CODE_OF_CONDUCT.md",
                "resources/shared/CONTRIBUTING.md": "CONTRIBUTING.md",
                "resources/shared/LICENSE": "LICENSE",
                "resources/shared/SECURITY.md": "SECURITY.md"
            }
        }
    ],
    "timezone": "America/New_York",
    "schedule": [
        "0 3 * * *"
    ],
    "prHourlyLimit": 0
}